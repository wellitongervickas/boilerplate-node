{
  "compilerOptions": {
    "target": "es2017", 
    "module": "commonjs",  
    "lib": ["ES6"],  
    "allowJs": true,
    "outDir": "./dist",               
    "rootDir": "./src",    
    "removeComments": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@models/*": ["./src/models"],
      "@controllers/*": ["./src/confcontrollersig"],
      "@config/*": ["./src/config"],
      "@views/*": ["./src/views"],
    },
    "esModuleInterop": true,                   
    "experimentalDecorators": true,      
    "emitDecoratorMetadata": true,     
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}